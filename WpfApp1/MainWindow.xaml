<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox Name="Number" Grid.Column="0" Grid.Row="0" Width="200" Height="100"/>
        <Button Name="Btn1" Grid.Column="0" Grid.Row="1" Width="200" Height="100" Content="Find" FontSize="30" Click="Btn1_Click"/>
        <Label Name="lblNum" Grid.Column="0" Grid.Row="2" Width="200" Height="100" BorderBrush="Black" BorderThickness="1"/>
        <Label Name="lblJson" Grid.Column="1" Grid.Row="1" Width="200" Height="100" BorderBrush="Black" BorderThickness="1"/>
        <Button Name="BtnJson" Grid.Column="1" Grid.Row="2" Width="200" Height="100" Content="PUSHME" Click="BtnJson_Click"/>




    </Grid>
</Window>
